<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Stackitxml" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colors del tema per a mode fosc -->
        <item name="android:colorBackground">@color/blue</item>
        <item name="colorOnBackground">@color/cream</item>

        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/cream</item>
        <item name="colorPrimarySurface">@color/blue_medium</item>
        <item name="colorOnPrimarySurface">@color/cream</item>

        <item name="colorSecondary">@color/red_background</item>
        <item name="colorOnSecondary">@color/red_foreground</item>

        <!-- Estils de botons per a mode fosc -->
        <item name="materialButtonStyle">@style/Widget.App.Button.Night</item>
        <item name="buttonBarButtonStyle">@style/Widget.App.Button.TextButton.Night</item>
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton.Night</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Defineix estils personalitzats per als botons (Mode Fosc) -->
    <style name="Widget.App.Button.Night" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/cream</item>
        <item name="backgroundTint">@color/blue_dark</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.App.Button.TextButton.Night" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/blue_light</item>
    </style>

    <style name="Widget.App.FloatingActionButton.Night" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/blue_dark</item>
        <item name="tint">@color/cream</item>
    </style>
</resources>