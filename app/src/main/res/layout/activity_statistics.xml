<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground"
    android:fitsSystemWindows="true"
    tools:context=".ui.statistics.StatisticsActivity">

    <TextView
        android:id="@+id/statisticsTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statistics"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart  ="16dp"
        android:layout_gravity="center_horizontal"
        android:textColor="?attr/colorOnBackground"/>

    <TextView
        android:id="@+id/collectionNameStatsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Nom de la Col·lecció]"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center_horizontal"
        android:textColor="?attr/colorOnBackground"/>

    <!-- Contenidor de la taula -->
    <LinearLayout
        android:id="@+id/rankingTableContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/table_border"
        android:layout_margin="16dp"
        android:padding="1dp"> <!-- Petit padding per al border -->

        <!-- Fila de capçaleres de la taula -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/colorPrimaryVariant"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Ítem"
                android:textStyle="bold"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Comptes"
                android:textStyle="bold"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="14sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Col·laborador Principal"
                android:textStyle="bold"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="14sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="El meu compte"
                android:textStyle="bold"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Aquí s'afegiran dinàmicament les files dels ítems -->
        <LinearLayout
            android:id="@+id/itemRowsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Les files dels ítems s'afegiran aquí programàticament -->
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/noItemsMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No hi ha ítems en aquesta col·lecció per mostrar estadístiques."
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:textColor="?attr/colorOnBackground"/>

</LinearLayout>
