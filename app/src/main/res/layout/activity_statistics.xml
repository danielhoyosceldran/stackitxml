<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:fitsSystemWindows="true"
    android:background="?android:attr/colorBackground"
    tools:context=".ui.statistics.StatisticsActivity">

    <TextView
        android:id="@+id/statisticsTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estadístiques de la Col·lecció"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textColor="?attr/colorOnBackground"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/collectionNameStatsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Col·lecció: [Nom de la Col·lecció]"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="?attr/colorOnBackground"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/mostCountedItemLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ítem més comptat:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnBackground"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/mostCountedItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carregant..."
        android:textSize="16sp"
        android:textColor="?attr/colorOnBackground"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/mostCountedByLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comptat principalment per:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnBackground"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/mostCountedByTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carregant..."
        android:textColor="?attr/colorOnBackground"
        android:textSize="16sp"/>

</LinearLayout>
