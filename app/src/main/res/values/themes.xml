<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (Mode Clar). -->
    <style name="Theme.Stackitxml" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colors del tema -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/onPrimaryColor</item>

        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/onSecondaryColor</item>

        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorOnBackground">@color/onBackgroundColor</item>

        <item name="colorSurface">@color/surfaceColor</item>
        <item name="colorOnSurface">@color/onSurfaceColor</item>

        <item name="colorError">@color/errorBackgroundColor</item> <!-- Utilitzem el color de fons per a errors -->
        <item name="colorOnError">@color/errorForegroundColor</item> <!-- Utilitzem el color de text per a errors -->

        <!-- Personalització de botons -->
        <!-- Estil per als botons elevats (per defecte) -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <!-- Estil per als botons de text (sense fons) -->
        <item name="buttonBarButtonStyle">@style/Widget.App.Button.TextButton</item>

        <!-- Altres personalitzacions -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Defineix estils personalitzats per als teus botons (Mode Clar) -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/onPrimaryColor</item>
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.App.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <!-- Tema per al Mode Fosc (values-night/themes.xml) -->
    <!-- Hauries de copiar aquest bloc al fitxer themes.xml dins de res/values-night/ -->
    <style name="Theme.Stackitxml.Night" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colors del tema per a mode fosc -->
        <item name="colorPrimary">#B28A3E</item> <!-- Utilitzem el groc més fort com a primari en mode fosc per contrast -->
        <item name="colorPrimaryVariant">#8C6C2F</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">#FFDC8F</item> <!-- El groc clar com a secundari en mode fosc -->
        <item name="colorSecondaryVariant">#E6C87C</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:colorBackground">@color/black</item> <!-- Fons general fosc -->
        <item name="colorOnBackground">@color/white</item>

        <item name="colorSurface">#1A1A1A</item> <!-- Fons de components fosc -->
        <item name="colorOnSurface">@color/white</item>

        <item name="colorError">@color/errorBackgroundColor</item>
        <item name="colorOnError">@color/errorForegroundColor</item>

        <!-- Estils de botons per a mode fosc -->
        <item name="materialButtonStyle">@style/Widget.App.Button.Night</item>
        <item name="buttonBarButtonStyle">@style/Widget.App.Button.TextButton.Night</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Widget.App.Button.Night" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/onPrimaryColor</item>
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.App.Button.TextButton.Night" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primaryColor</item>
    </style>
</resources>
