<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="text_primary">#121212</color>
    <color name="text_secondary">#757575</color>
    <!-- Colors bàsics de Material Design (sovint ja presents) -->
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>

    <!-- Els teus colors personalitzats per al tema -->
    <!-- Color principal de l'aplicació (groc clar) -->
    <color name="primaryColor">#FFDC8F</color>
    <!-- Variant del color principal (per a barra d'estat, etc. - un groc una mica més fosc) -->
    <color name="primaryDarkColor">#B28A3E</color>
    <!-- Color del text/icones sobre primaryColor (negre, ja que primaryColor és clar) -->
    <color name="onPrimaryColor">@color/black</color>

    <!-- Color d'accent (groc més fort) -->
    <color name="secondaryColor">#FFEECA</color>
    <!-- Variant del color secundari (un groc accent més fosc) -->
    <color name="secondaryDarkColor">#FFE5AD</color>
    <!-- Color del text/icones sobre secondaryColor (blanc, ja que secondaryColor és fosc) -->
    <color name="onSecondaryColor">@color/white</color>

    <!-- Colors de fons i text sobre fons -->
    <color name="backgroundColor">@color/white</color> <!-- Fons general clar -->
    <color name="onBackgroundColor">@color/black</color> <!-- Text sobre fons clar -->

    <color name="surfaceColor">@color/white</color> <!-- Fons de components com Cards, Dialogs -->
    <color name="onSurfaceColor">@color/black</color> <!-- Text sobre fons de components -->

    <!-- Colors per a missatges d'estat -->
    <color name="errorBackgroundColor">#FFB5B5</color>
    <color name="errorForegroundColor">#AB5151</color>

    <color name="infoBackgroundColor">#B5D9FF</color>
    <color name="infoForegroundColor">#5067AB</color>

    <color name="successBackgroundColor">#BCFFB5</color>
    <color name="successForegroundColor">#5FAB50</color>

    <color name="warningBackgroundColor">#FFB5B5</color>
    <color name="warningForegroundColor">#AB5151</color>

    <color name="colorOnSurfaceVariant">#757575</color>

</resources>
